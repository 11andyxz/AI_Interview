{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "interview_chat",
  "type": "object",
  "required": ["answer"],
  "properties": {
    "answer": { "type": "string" },
    "follow_up_question": { "type": ["string", "null"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "text": { "type": "string" }
        },
        "required": ["source", "text"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
