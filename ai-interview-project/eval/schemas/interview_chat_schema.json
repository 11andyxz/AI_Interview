{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "interview_chat",
  "type": "object",
  "required": ["answer"],
  "properties": {
    "answer": { "type": "string" },
    "follow_up_question": { "type": ["string", "null"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "text": { "type": "string" }
        },
        "required": ["source", "text"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Interview Chat Response",
  "type": "object",
  "required": ["answer", "follow_up_question", "confidence"],
  "properties": {
    "answer": { "type": "string", "minLength": 20, "maxLength": 2000 },
    "follow_up_question": { "type": "string", "minLength": 10, "maxLength": 200 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "citations": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 5
    }
    ,
    "question": { "type": "string" },
    "questionNumber": { "type": "number" },
    "sessionId": { "type": "string" }
  },
  "additionalProperties": false
}
